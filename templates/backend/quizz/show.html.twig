{% extends 'backend/base.html.twig' %}

{% block title %}Quizz{% endblock %}

{% block body %}
    <h1>Quizz</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Section associée</th>
                <td>{{ quizz.trainingSection }}</td>
            </tr>
            <tr>
                <th>Questions</th>
                <td>
                    {% for question in quizz.questions %}
                        <p>
                            Intitulé : {{ question.title }}
                        </p>
                        <p>
                            Explication : {{ question.explanation }}
                        </p>
                        <ul>
                            {% for answer in question.answers %}
                                <li>
                                    {% if answer.isAnswer %}<strong>Bonne réponse</strong> {% endif %}{{ answer.text }}
                                </li>
                            {% endfor %}
                        </ul>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <p><a href="{{ path('backend_quizzes_edit', {'id': quizz.id}) }}" class="btn btn-secondary" role="button">Editer</a></p>

    <p>{{ include('backend/quizz/_delete_form.html.twig') }}</p>

    <p><a href="{{ path('backend_quizzes') }}" class="btn btn-secondary" role="button">Retour à la liste</a></p>
{% endblock %}
