{% extends 'backend/base.html.twig' %}

{% block title %}Liste des formations{% endblock %}

{% block body %}
    <h1>Liste des formations</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>URL raccourcie</th>
                <th>Créée le</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for training in trainings %}
            <tr>
                <td>{{ training.title }}</td>
                <td>{{ training.slug }}</td>
                <td>{{ training.createdAt ? training.createdAt|date('d/m/Y') : 'Non défini' }}</td>
                <td>
                    <a href="{{ path('backend_trainings_show', {'id': training.id}) }}">Afficher</a>
                    <a href="{{ path('backend_trainings_edit', {'id': training.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune formation trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('backend_trainings_new') }}">Créer une nouvelle formation</a>
{% endblock %}
