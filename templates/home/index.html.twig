{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="masthead">
        <div class="container position-relative">
            <div class="row justify-content-center">
                <div class="col-xl-6">
                    <div class="text-center text-white">
                        <h1 class="display-4 fw-bolder">ECO IT</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <h3 class="main-title lead fw-normal mb-0">Pour les d√©veloppeurs soucieux de leur impact digital.</h3>
    <section class="display-formation">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                {% for training in trainings %}
                    <div class="col mb-5">
                        <div class="card h-100">
                            {% if training.image is defined and training.image %}
                                <img class="card-img-top" height="auto" src="{{ asset('/uploads/' ~ training.image.name) }}" />
                            {% else %}
                                <img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" />
                            {% endif %}
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <h5 class="fw-bolder">{{ training.title }}</h5>
                                    <span class="text-center">{{ training.description }}</span>
                                </div>
                            </div>
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center">
                                    <a href="{{ path('trainings_show', {'slug': training.slug}) }}" class="btn btn-secondary" role="button">Consulter</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}