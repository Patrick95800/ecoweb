{% extends 'base.html.twig' %}

{% block title %}{{ training.title }}{% endblock %}

{% block body %}
    <body class="sb-nav-fixed">
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Formation</div>
                        <a class="nav-link" href="{{ path('trainings_show', {'slug': training.slug}) }}">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                                {{ training.title }}
                            </a>
                            <div class="sb-sidenav-menu-heading">Sections</div>
                            {% for section in training.sections %}
                                <a class="nav-link collapsed" href="{{ path('trainings_show', {'slug': training.slug}) }}" data-bs-toggle="collapse" data-bs-target="#collapseLayouts" aria-expanded="false" aria-controls="collapseLayouts">
                                    <div class="sb-nav-link-icon"><i class="fas fa-columns"></i></div>
                                        {{ section.title }}
                                    <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                                    <div class="collapse" id="collapseLayouts" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                                        <nav class="sb-sidenav-menu-nested nav">
                                            {% for section in training.sections %}
                                                <a class="nav-link" href="{{ path('trainings_show_section', {'slug': training.slug, 'sectionSlug': section.slug}) }}">{{ section.title }}</a>
                                            {% endfor %}
                                        </nav>
                                    </div>
                                </a>
                            {% endfor %}
                       </div>
                </div>
                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    <div class="sb-sidenav-footer">
                        <div class="small">Connecté en tant que :</div>
                        {{ app.user }}
                    </div>
                {% endif %}
            </nav>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="js/scripts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="assets/demo/chart-area-demo.js"></script>
    <script src="assets/demo/chart-bar-demo.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
    <script src="js/datatables-simple-demo.js"></script>
    </body>



    <div class="card h-100">
        {% if training.image is defined and training.image %}
            <img class="card-img-top" src="{{ asset('/uploads/' ~ training.image.name) }}" />
        {% else %}
            <img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" />
        {% endif %}
        <div class="card-body p-4">
            <div class="text-center">
                <h5 class="fw-bolder">{{ training.title }}</h5>
                <span class="text-center">{{ training.description }}</span>
            </div>
        </div>
        <ul>
            {% for section in training.sections %}
                <li><a href="{{ path('trainings_show_section', {'slug': training.slug, 'sectionSlug': section.slug}) }}">{{ section.title }}</a></li>
            {% endfor %}
        </ul>

        <p>
            <a href="{{ path('trainings') }}">Retourner à la liste des formations</a>
        </p>
    </div>
{% endblock %}